datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        Int      @id @default(autoincrement())
  title     String
  onChainId Int
  clients   Client[]
}

model Client {
  address String  
  weight BigInt[]  @default([])
  bias   BigInt[] @default([])
  task    Task     @relation(fields: [taskId], references: [id])
  taskId  Int
  @@id([address,taskId])
}
